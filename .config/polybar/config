[colors]
green = #619647
yellow = #FE9B00
black = #000000
grey = #2B2B2B
aqua = #A9B7C6
blue = #6897BB
white = #FFFFFF
red = #A02929
purple = #664975

[global/wm]
margin-top = 5
margin-bottom = 5

[bar/MainBar]
width = 100%
height = 20
offset-x = 0
offset-y = 0
background = ${colors.grey}
foreground = ${colors.aqua}

spacing = 1
padding-left = 0
padding-right = 0
module-margin-left = 0
module-margin-right = 0

font-0 = Ubuntu:size=10;0
font-1 = SystemSanFrancisco:size=9;0
#font-2 = SourceSansPro:size=8;0
font-2 = Wuncon Siji:size=8
font-3 = FontAwesome:size=10;0

modules-left = cpu memory network
modules-center = i3
modules-right = battery volume date

tray-position = right
tray-padding = 0

[module/i3]
type = internal/i3
format = <label-state>

pin-workspaces = true

label-focused-font = 5
label-unfocused-font = 4
label-urgent-font = 4
label-visible-font = 4

label-focused = %name%
label-focused-background = ${colors.purple}

label-focused-foreground = ${colors.aqua}
label-focused-padding = 3

label-unfocused = %name%
label-unfocused-padding = 2

label-urgent = %name%
label-urgent-foreground = ${colors.red}
label-urgent-padding = 2

label-visible = %name%
label-visible-padding = 2

[module/date]
type = internal/date
interval = 60

format = <label>
format-background = ${colors.yellow}
format-foreground = ${colors.grey}
format-padding = 3

label = %date% %time%
date =  %A, %b. %d
time =  %H:%M

[module/battery]
type = internal/battery
battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>
format-discharging = <ramp-capacity> <label-discharging>

format-charging-padding = 1
format-discharging-padding = 1
format-full-padding = 1
format-full-prefix = " "

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
animation-charging-framerate = 750


[module/cpu]
type = internal/cpu
interval = 3
format-prefix = "CPU "
format-underline = #f90000
format-foreground = ${colors.aqua}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 10
format-prefix = " MEM "
format-underline = #4bffdc
label = "%percentage_used%% "

